  <body class="">
    <%= render 'layouts/header' %>
    <% if @user_type == 'apporteur'%>
      <%= render partial: 'app_aff_sidebar' %>
    <%elsif @user_type == 'administrateur' %>
      <%= render partial: 'administrateur_sidebar' %>
